@model P134Lab.Models.Student
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <form action="Update" method="post">
        <input type="hidden" name="id" value="@Model.Id" class="form-control" />
        <div class="form-group">
            <label>Name:</label>
            <input value="@Model.Name" type="text" name="name" class="form-control" />
        </div>
        <div class="form-group">
            <label>Surname:</label>
            <input value="@Model.Surname" type="text" name="surname" class="form-control" />
        </div>
        <div class="form-group">
            <label>Age:</label>
            <input value="@Model.Age" type="number" name="age" class="form-control" />
        </div>
        <button class="btn btn-outline-dark" type="submit">Update</button>
    </form>
</div>

